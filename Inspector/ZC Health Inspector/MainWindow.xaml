<Window x:Class="ZC_Health_Inspector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZC_Health_Inspector"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView x:Name="DisplayView" Margin="0,57,0,0" SelectionChanged="DisplayView_SelectionChanged">
            <ListView.View>
                <GridView>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="LoadFileButton" Content="Load File" HorizontalAlignment="Left" Margin="10,5,0,0" VerticalAlignment="Top" Width="81" Click="LoadFileButton_Click"/>
        <Button x:Name="SaveFileButton" Content="Save File" HorizontalAlignment="Left" Margin="96,5,0,0" VerticalAlignment="Top" Width="81" Click="SaveFileButton_Click"/>
        <Button x:Name="RenameItem" Content="Set Name" HorizontalAlignment="Left" Margin="222,32,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="RenameItem_Click" Visibility="Hidden"/>
        <TextBox x:Name="NewNameTextBox" HorizontalAlignment="Left" Height="23" Margin="10,32,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="207" Visibility="Hidden"/>

    </Grid>
</Window>
